<div class='container'>
  <div class='profile-section'>
    <div class='profile-details'>
      <img src="assets/default-user.png" class="icon" alt="rails">
      <h1><strong><%= current_user.first_name %> <%= current_user.last_name %></strong></h1>
      <h4><%= current_user.id %></h4>
      <h4><%= current_user.description %></h4>
      <br><br>
      <h5>Member since <%= (Date::MONTHNAMES[current_user.created_at.month])%> <%= current_user.created_at.year %> -- <%= current_user.id %></h5>

      <h5 id='edit-profile-a'><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></h5>
    </div>
      <div class='expert-section'>
        <h5>EXPERT SECTION</h5>
        <hr>

        <h3>Expert in
            <% @data.each do |t| %>
              <strong>
                <% t %>,
              </strong>
            <% end %>
        <h3>
      </div>

    <div class='learner-section'>
      <h5>LEARNER SECTION</h5>
      <hr>
      <h3>Learning

      <h3>


    </div>

    <div class='history'>
    <h5>COMPLETED COFFEE CHATS</h5>
    <hr>
    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Last 30 days</th>
          <th scope="col">Last 90 days</th>
          <th scope="col">All time</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">As a learner</th>
          <td>0</td>
          <td>0</td>
          <td>0</td>
        </tr>
        <tr>
          <th scope="row">As an expert</th>
          <td>0</td>
          <td>0</td>
          <td>0</td>
        </tr>
        <tr>
          <th scope="row">Attendance</th>
          <td>0</td>
          <td>0</td>
          <td>0</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>


  <div class="form-inputs">
    <%= simple_form_for(@user, url: experts_path, method: :patch ) do |f| %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <% end %>
  </div>
