<div class='container'>
  <div class='profile-section'>
    <div class='profile-details'>
      <img src="assets/default-user.png" class="icon" alt="rails">
      <h1><strong>First name</strong> and <strong>Last name</strong></h1>
      <h4>Location</h4>
      <br><br>
      <h5>Member since Feb 2022</h5>
    </div>

    <div class='expert-section'>
      <h5>EXPERT SECTION</h5>
      <hr>
      <h3>Expert in <strong>English, Dutch</strong><h3>
    </div>

    <div class='learner-section'>
      <h5>LEARNER SECTION</h5>
      <hr>
      <h3>Learning <strong>JavaScript, OOP</strong><h3>
    </div>

    <div class='history'>
    <h5>COMPLETED COFFEE CHATS</h5>
    <hr>
    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Last 30 days</th>
          <th scope="col">Last 90 days</th>
          <th scope="col">All time</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">As a learner</th>
          <td>Mark</td>
          <td>Otto</td>
          <td>@mdo</td>
        </tr>
        <tr>
          <th scope="row">As an expert</th>
          <td>Jacob</td>
          <td>Thornton</td>
          <td>@fat</td>
        </tr>
        <tr>
          <th scope="row">Attendance</th>
          <td>Larry the Bird</td>
          <td>@twitter</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>


  <div class="form-inputs">
    <%= simple_form_for(@user, url: experts_path, method: :patch ) do |f| %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <% end %>
  </div>
